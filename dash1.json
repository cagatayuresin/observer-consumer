        "w": 24,
        "x": 0,
        "y": 0
      },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 1,
      "type": "timeseries",
      "title": "Host CPU Usage (%)",
      "description": "Average CPU utilization across all hosts",
      "datasource": "influxdb",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 1
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "opacity",
            "spanNulls": true,
            "pointSize": 5,
            "stacking": {
              "mode": "none"
            },
            "axisPlacement": "auto",
            "axisLabel": "Usage %",
            "scaleDistribution": {
              "type": "linear"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "calcs": ["lastNotNull", "max", "mean"]
        }
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"metrics\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"system_metrics\" and r._field == \"cpu_percent\")\n  |> filter(fn: (r) => r.agent_id =~ /${agent_id:regex}/)\n  |> aggregateWindow(every: v.windowPeriod, fn: mean)\n  |> yield()"
        }
      ]
    },
