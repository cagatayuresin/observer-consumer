{
  "title": "Observer – Full K8s & Host Dashboard",
  "uid": "observer-master-v2",
  "version": 2,
  "schemaVersion": 38,
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m"
    ]
  },
  "tags": ["kubernetes", "monitoring", "infrastructure"],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "agent_id",
        "label": "Agent ID",
        "datasource": "influxdb",
        "query": "import \"influxdata/influxdb/schema\"\nschema.tagValues(bucket: \"metrics\", tag: \"agent_id\")",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "sort": 1
      },
      {
        "type": "query",
        "name": "namespace",
        "label": "Namespace",
        "datasource": "influxdb",
        "query": "import \"influxdata/influxdb/schema\"\nschema.tagValues(bucket: \"metrics\", tag: \"ns\")",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "sort": 1
      },
      {
        "type": "query",
        "name": "pod_name",
        "label": "Pod Name",
        "datasource": "influxdb",
        "query": "import \"influxdata/influxdb/schema\"\nschema.tagValues(bucket: \"metrics\", tag: \"pod_name\")",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 100,
